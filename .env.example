# Application
APP_NAME="CRM Lead Management"
APP_VERSION="1.0.0"
DEBUG=false

# CORS (comma-separated or JSON array)
ALLOWED_ORIGINS=["*"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/crm_db

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Business Rules
MIN_TRANSFER_SCORE=0.6

# AI Cache TTL (in seconds)
AI_CACHE_TTL=3600

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_ADMIN_IDS=[123456789,585761464]
API_BASE_URL=http://localhost:8000
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_SECRET=

# API Authentication
API_SECRET_TOKEN=your-secret-token-here
